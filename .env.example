# Project Aether - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# === API Tokens ===

# Patent provider selection (epo or lens)
PATENT_PROVIDER=epo

# EPO OPS Credentials (Required for primary provider)
# Create app credentials at: https://developers.epo.org/
EPO_CONSUMER_KEY=your_epo_consumer_key_here
EPO_CONSUMER_SECRET=your_epo_consumer_secret_here

# Optional EPO endpoints/timeouts
EPO_OPS_BASE_URL=https://ops.epo.org/3.2/rest-services
EPO_OPS_AUTH_URL=https://ops.epo.org/3.2/auth/accesstoken
EPO_REQUEST_TIMEOUT_SECONDS=30

# Lens.org API Token (Optional fallback provider)
# Get your token at: https://www.lens.org/lens/user/subscriptions
LENS_ORG_API_TOKEN=your_lens_api_token_here

# Google Gemini API Key (Required)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# OpenAI API Key (Optional - if using OpenAI instead of Gemini)
OPENAI_API_KEY=your_openai_api_key_here

# SerpApi Key (Optional - for Google Patents MCP)
SERPAPI_KEY=your_serpapi_key_here

# === Application Configuration ===

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# SQLite database path (for caching)
DATABASE_PATH=./data/aether.db

# LanceDB vector database path
VECTOR_DB_PATH=./data/vectors

# Default target jurisdictions (comma-separated)
DEFAULT_JURISDICTIONS=RU,PL,RO,CZ,NL,ES,IT,SE,NO,FI

# Search window (days to look back)
SEARCH_WINDOW_DAYS=7

# === MCP Configuration ===

# MCP server host
MCP_HOST=localhost

# MCP server port
MCP_PORT=3000

# === Rate Limiting ===

# Maximum API requests per minute
MAX_REQUESTS_PER_MINUTE=30

# Request retry attempts
MAX_RETRY_ATTEMPTS=5

# Retry delay multiplier (seconds)
RETRY_DELAY_MULTIPLIER=1
